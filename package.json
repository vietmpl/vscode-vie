{
	"name": "vie",
	"displayName": "Vie",
	"publisher": "vietmpl",
	"description": "Modern toolchain for code generation",
	"readme": "README.md",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.105.0"
	},
	"icon": "./assets/icon.png",
	"license": "MIT",
	"categories": [
		"Programming Languages",
		"Other"
	],
	"repository": {
		"url": "https://github.com/vietmpl/vscode-vie"
	},
	"type": "module",
	"main": "./dist/extension.js",
	"activationEvents": [
		"onLanguage:vie"
	],
	"contributes": {
		"languages": [
			{
				"id": "vie",
				"aliases": [
					"Vie",
					"vie"
				],
				"extensions": [
					".vie"
				],
				"configuration": "./language-configuration.json"
			}
		]
	},
	"scripts": {
		"build": "bun run build.ts",
		"format": "biome check --write",
		"package": "vsce package"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.6",
		"@types/bun": "^1.3.0",
		"@types/emscripten": "^1.41.2",
		"@types/vscode": "^1.105.0",
		"@vscode/vsce": "^3.6.2",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"tree-sitter-vie": "^0.1.2",
		"web-tree-sitter": "^0.25.10"
	}
}
